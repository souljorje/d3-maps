{
  "name": "d3-maps",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">= 22"
  },
  "scripts": {
    "dev": "pnpm --filter docs dev",
    "build": "turbo run build",
    "build:packages": "turbo run build --filter=!@d3-maps/docs",
    "test": "turbo run test",
    "typecheck": "pnpm -r typecheck",
    "typecheck:test": "pnpm -r --if-present typecheck:test",
    "agents:check": "node scripts/agents-check.mjs",
    "docs:gen:examples": "node scripts/docs-gen-examples.mjs",
    "typedoc": "typedoc --options typedoc.json",
    "docs:gen": "pnpm docs:gen:examples && pnpm typedoc",
    "docs:build": "turbo run build --filter=@d3-maps/docs",
    "docs:preview": "pnpm --filter docs preview",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "changeset publish",
    "prepare": "simple-git-hooks",
    "lint-staged": "lint-staged",
    "lint": "eslint ./packages --max-warnings 0 --cache",
    "lintfix": "pnpm run lint --fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@changesets/changelog-github": "catalog:",
    "@changesets/cli": "catalog:",
    "@vue/tsconfig": "catalog:",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "remark-insert-headings": "catalog:",
    "remark-toc": "catalog:",
    "simple-git-hooks": "catalog:",
    "tsdown": "catalog:",
    "turbo": "catalog:",
    "typedoc": "catalog:",
    "typedoc-plugin-markdown": "catalog:",
    "typedoc-plugin-remark": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm test"
  },
  "lint-staged": {
    "*.{ts,tsx,vue}": [
      "eslint --fix --max-warnings=0"
    ]
  }
}
