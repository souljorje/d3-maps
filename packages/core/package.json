{
  "name": "@d3-maps/core",
  "type": "module",
  "version": "0.2.0",
  "private": false,
  "description": "Framework-agnostic core utilities for building reactive D3 maps",
  "author": "Georgii Bukharov <souljorje@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/souljorje/d3-maps.git",
    "directory": "packages/core"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "browser": "./dist/index.iife.js"
    },
    "./*.css": {
      "import": "./dist/*.css",
      "browser": "./dist/*.css"
    }
  },
  "style": "dist/index.css",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.iife.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "pnpm run typecheck && tsdown",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "d3-geo": "catalog:",
    "d3-selection": "catalog:",
    "d3-zoom": "catalog:",
    "topojson-client": "catalog:"
  },
  "devDependencies": {
    "@types/d3-geo": "catalog:",
    "@types/d3-selection": "catalog:",
    "@types/d3-zoom": "catalog:",
    "@types/geojson": "catalog:",
    "@types/topojson-client": "catalog:",
    "@types/topojson-specification": "catalog:",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
