{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "baseUrl": ".",
    "paths": {
      "@d3-maps/core": ["packages/core/src/index.ts"],
      "@d3-maps/core/*": ["packages/core/src/*"],
      "@d3-maps/react": ["packages/react/src/index.ts"],
      "@d3-maps/react/*": ["packages/react/src/*"],
      "@d3-maps/vue": ["packages/vue/src/index.ts"],
      "@d3-maps/vue/*": ["packages/vue/src/*"]
    },

    "noEmit": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,

    /* Linting */
    "strict": true,
    "allowJs": false,
    "allowUnreachableCode": false,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "useDefineForClassFields": true
  }
}
